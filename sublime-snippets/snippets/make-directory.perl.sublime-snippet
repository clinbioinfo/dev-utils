if (!-e \$${1:outdir}){
    mkpath(\$${1:outdir}) || \$self->{_logger}->logconfess("Could not create directory '\$${1:outdir}' : \$!");
    \$self->{_logger}->info("Created directory '\$${1:outdir}");
}
